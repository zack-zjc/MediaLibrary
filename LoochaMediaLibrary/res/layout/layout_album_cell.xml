<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/id_album_view_cell"
    android:layout_width="match_parent"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:layout_height="65dp">

    <com.realcloud.media.view.LocalImageView
        android:id="@id/id_album_view_cell_image"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@id/id_album_view_cell_text"
        android:layout_toRightOf="@id/id_album_view_cell_image"
        android:layout_marginLeft="15dp"
        android:textColor="#333333"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="18dp" />
    
    <View
        android:background="#eaeaea"
        android:layout_alignLeft="@id/id_album_view_cell_text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>