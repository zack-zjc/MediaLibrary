<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.realcloud.media.view.LocalImageView
        android:id="@id/id_grid_view_cell"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@id/id_grid_view_cell_checkbox"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:button="@null"
        android:background="@drawable/bg_checkbox_selector"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="22dp"
        android:layout_height="22dp" />

    <TextView
        android:id="@id/id_time"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/id_grid_view_cell"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.realcloud.media.view.LocalCoverView
        android:id="@id/id_cover"
        android:background="#7f000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>